  <script>
    const messageText = document.getElementById("messageText");

    const lines = {
      rabbit: [
        "May your worries grow smaller tonight, like footsteps fading softly into moss.",
        "May you find one gentle thing that makes today feel worth keeping in your memory.",
        "May the parts of you that feel timid still find a way to move forward, one quiet hop at a time."
      ],
      fox: [
        "May you always keep a little clever warmth around you, even on colder days.",
        "May unexpected paths open up for you, the way fox trails appear between trees.",
        "May you feel allowed to change direction, without needing to explain why."
      ],
      owl: [
        "May you remember that moving slowly can also be a kind of wisdom.",
        "May the questions you carry tonight grow lighter, not heavier.",
        "May you feel seen in a soft way, the way an owl sees without startling its guests."
      ],
      mushrooms: [
        "May small, almost invisible things quietly bring you strength.",
        "May you grow in directions nobody else has to understand, as long as they feel right to you.",
        "May something you thought was over quietly begin again, in a gentler form."
      ]
    };

    function pickLine(key) {
      const group = lines[key];
      if (!group || group.length === 0) return "";
      const index = Math.floor(Math.random() * group.length);
      return group[index];
    }

    function setMessage(key) {
      const line = pickLine(key);
      if (!line) return;
      messageText.textContent = line;
    }

    function addOnceAnimation(element, className) {
      element.classList.remove(className);
      void element.offsetWidth;
      element.classList.add(className);
      const handle = () => {
        element.classList.remove(className);
        element.removeEventListener("animationend", handle);
      };
      element.addEventListener("animationend", handle);
    }

    const rabbit = document.querySelector("[data-role='rabbit']");
    const fox = document.querySelector("[data-role='fox']");
    const owl = document.querySelector("[data-role='owl']");
    const mushrooms = document.querySelector("[data-role='mushrooms']");

    if (rabbit) {
      rabbit.addEventListener("click", () => {
        setMessage("rabbit");
        addOnceAnimation(rabbit, "rabbit-hop");
      });
    }

    if (fox) {
      fox.addEventListener("click", () => {
        setMessage("fox");
        addOnceAnimation(fox, "fox-tail-wiggle");
      });
    }

    if (owl) {
      owl.addEventListener("click", () => {
        setMessage("owl");
        addOnceAnimation(owl, "owl-bob");
      });
    }

    if (mushrooms) {
      mushrooms.addEventListener("click", () => {
        setMessage("mushrooms");
        mushrooms.classList.remove("mushroom-glow");
        void mushrooms.offsetWidth;
        mushrooms.classList.add("mushroom-glow");
      });
    }
  </script>
</body>
</html>
